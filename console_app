@g.command()
@option('--structure', prompt="Wybierz sposob przechowywania danych: graf [0] tablica [1]", type=Choice(["0", "1"]))
@option('--record', prompt="Wybierz rekord")
def function_7(structure, record):
    global v
    v = int(record)
    if structure == "0":
        if d == "0":
            print "Szukane rekordy: ",
            print gr.fi(v)
            print_time("gr.fi(v)")
        else:
            print "Szukane rekordy: ",
            print gr.fa(v)
            print_time("gr.fa(v)")
    else:
        global c
        if d == "0":
            DB = sqlite3.connect("iris.db")
            c = DB.cursor()
            print "Szukane rekordy: ",
            print db.fi(c, v)
            print_time("db.fi(c, v)")
            DB.close()
        else:
            DB = sqlite3.connect("abalone.db")
            c = DB.cursor()
            print "Szukane rekordy: ",
            print db.fa(c, v)
            print_time("db.fa(c, v)")
            DB.close()
    if confirm('Do you want to continue?'):
        choose_function()
    else:
        exit()

